#%RAML 1.0 Library

types:
  # Type name determines the name of the Java class that will be generated.

  HeatmapPostRequest:
    type: VisualizationRequestBase
    properties:
      config: HeatmapSpec

  HeatmapSpec:
    additionalProperties: false
    properties:
      outputEntityId:
        type: string
      showMissingness:
        type: ShowMissingnessNoAxes
        required: false
      valueSpec:
        type: string
        enum: ['collection', 'series']
      xAxisVariable: 
        type: VariableSpec
      yAxisVariable: 
        type: VariableSpec
      zAxisVariable:
        type: VariableSpec
        required: false
      facetVariable: 
        type: VariableSpec[]
        maxItems: 2
        required: false
        
  Heatmap:
    additionalProperties: false
    properties:
      data:
        type: HeatmapData[]
      config:
        type: PlotConfig

  HeatmapPostResponse:
    additionalProperties: false
    properties:
      heatmap:
        type: Heatmap
      sampleSizeTable:
        type: SampleSizeTable[]
      completeCasesTable:
        type: VariableCompleteCases[]
      
